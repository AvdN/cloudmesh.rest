{
    "name": "example-001",
    "internal_ip": null,
    "external_ip": null,
    "create_external_ip": true,
    "cores": 2,
    "memory": 2048,
    "disk": 80,
    "loginuser": "root",
    "security_groups": [
        {
            "protocols": [ "tcp", "udp" ],
            "ports": [ 22, 443, 80, 8080 ],
            "ingress": "0.0.0.0/32",
            "egress": "0.0.0.0/32"
        }
    ],
    "users": [
        {
            "name": "hello",
            "groups": ["wheel"],
            "ssh_keys": [
                {
                    "ssh_keygen": true,
                    "to": ".ssh/id_rsa",
                    "password": {
                        "from": "yaml",
                        "decrypt": "gpg",
                        "file": "secrets.yml.gpg",
                        "key": "users.hello.ssh[0]"
                    },
                    "method": "ed25519"
                },
                {
                    "ssh_keygen": true,
                    "to": ".ssh/testing",
                    "password": {
                        "from": "yaml",
                        "decrypt": "gpg",
                        "file": "secrets.yml.gpg",
                        "key": "users.hello.ssh[1]"
                    },
                    "method": "rsa",
                    "bits": 4098
                },
                {
                    "ssh_keygen": false,
                    "to": ".ssh/copied",
                    "from": "secrets/ssh/hello/copied.gpg",
                    "decrypt": "gpg"
                }
            ],
            "authorized_keys": [
                "ssh-rsa AAAA...",
                "ssh-ed25519 AAAA...",
                "...etc"
            ]
        }
    ]
}
